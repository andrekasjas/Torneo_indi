@page
@model Torneo.App.Frontend.Pages.Partidos.IndexModel
@{
}
<h1>Listado de Partidos</h1>
<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Fecha</th>
            <th scope="col">Equipo local</th>
            <th scope="col">Marcador</th>
            <th scope="col">Equipo visitante</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.partidos)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.FechaHora</td>
                <td>@item.Local.Nombre</td>
                <td>@item.MarcadorLocal : @item.MarcadorVisitante</td>
                <td>@item.Visitante.Nombre</td>
            </tr>
        }
    </tbody>
</table>